---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  ogImage?: string;
  schema?: object;
  headerVariant?: 'default' | 'simple';
  headerCtaHref?: string;
  isHomepage?: boolean;
}

const { 
  title, 
  description, 
  canonicalUrl,
  ogImage = '/images/og-default.jpg',
  schema,
  headerVariant = 'default',
  headerCtaHref = '/#lead-form',
  isHomepage = false
} = Astro.props;

const siteUrl = 'https://searchenginecoach.com';
const fullCanonical = canonicalUrl ? `${siteUrl}${canonicalUrl}` : Astro.url.href;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  
  <title>{title}</title>
  
  <!-- Google Analytics (GA4) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-0XVX13QC0L"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-0XVX13QC0L');
  </script>
  
  <link rel="canonical" href={fullCanonical} />
  
  <!-- Preconnect for fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@600;700;800&display=swap" rel="stylesheet" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  
  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={fullCanonical} />
  <meta property="og:image" content={`${siteUrl}${ogImage}`} />
  <meta property="og:site_name" content="Search Engine Coach" />
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={`${siteUrl}${ogImage}`} />
  
  <!-- JSON-LD Schema -->
  {schema && (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}
  
  <!-- Base Organization Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Search Engine Coach",
      "url": "https://searchenginecoach.com",
      "logo": "https://searchenginecoach.com/images/logo.png",
      "description": "Search Engine Coach helps businesses improve search rankings and drive growth through expert SEO services.",
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "availableLanguage": "English"
      }
    }
  </script>
</head>
<body>
  <a href="#main-content" class="skip-link">Skip to main content</a>
  
  <Header variant={headerVariant} ctaHref={headerCtaHref} isHomepage={isHomepage} />
  
  <main id="main-content">
    <slot />
  </main>
  
  <Footer />
  
  <script>
    // Auto-focus form when clicking anchor links to #lead-form
    document.querySelectorAll('a[href="#lead-form"], a[href="/#lead-form"], [data-focus-form]').forEach(link => {
      link.addEventListener('click', () => {
        setTimeout(() => {
          const form = document.getElementById('lead-form');
          const firstInput = form?.querySelector('input:not([type="hidden"])') as HTMLInputElement;
          if (firstInput) {
            firstInput.focus();
          }
        }, 100);
      });
    });
  </script>
</body>
</html>
