---
import BaseLayout from '../layouts/BaseLayout.astro';

const currentYear = new Date().getFullYear();
const lastUpdated = 'December 24, 2024';
---

<BaseLayout
  title="Terms of Service | Search Engine Coach"
  description="Read the terms and conditions for using Search Engine Coach services. Understanding your rights and responsibilities."
  canonicalUrl="/terms/"
>
  <section class="policy-hero">
    <div class="container">
      <h1>Terms of Service</h1>
      <p class="policy-updated">Last updated: {lastUpdated}</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="policy-content">
        <div class="policy-intro">
