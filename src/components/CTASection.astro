---
interface Props {
  heading?: string;
  subheading?: string;
  buttonText?: string;
  buttonHref?: string;
  variant?: 'default' | 'dark';
}

const {
  heading = "Ready to Rank Higher?",
  subheading = "Get your free SEO strategy and discover how to outrank your competition.",
  buttonText = "Get Your Free Strategy",
  buttonHref = "#lead-form",
  variant = 'default'
} = Astro.props;
---

<section class:list={['cta-section', { 'cta-section--dark': variant === 'dark' }]}>
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-heading">{heading}</h2>
      <p class="cta-subheading">{subheading}</p>
      <a href={buttonHref} class:list={['btn', 'btn-large', variant === 'dark' ? 'btn-white' : 'btn-primary']} data-focus-form>
        {buttonText}
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M4.16667 10H15.8333M15.8333 10L10 4.16667M15.8333 10L10 15.8333" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: var(--space-16) 0;
    background: linear-gradient(135deg, #f0f7ff 0%, #e0efff 100%);
  }
  
  .cta-section--dark {
    background: linear-gradient(135deg, var(--color-secondary) 0%, #1e3a5f 100%);
    color: white;
  }
  
  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-heading {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-4);
  }
  
  @media (min-width: 768px) {
    .cta-heading {
      font-size: var(--text-4xl);
    }
  }
  
  .cta-section--dark .cta-heading {
    color: white;
  }
  
  .cta-subheading {
    font-size: var(--text-lg);
    color: var(--color-text-light);
    margin-bottom: var(--space-8);
  }
  
  .cta-section--dark .cta-subheading {
    color: #cbd5e1;
  }
</style>
