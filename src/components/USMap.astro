// US Map Component - Interactive clickable states
import { getAllStates } from '../utils/csv';
import fs from 'fs';
import path from 'path';

// Read the SVG file
const svgPath = path.join(process.cwd(), 'usa.svg');
let svgContent = fs.readFileSync(svgPath, 'utf-8');

// Get state data for mapping names to slugs
const states = getAllStates();
const stateSlugMap: Record<string, string> = {};
states.forEach(s => {
  stateSlugMap[s.state] = s.state_slug;
});

// Also handle DC
stateSlugMap['Washington, DC'] = 'washington-dc';

// Parse the SVG and wrap each path in an anchor tag
// Extract the inner content (paths) from the SVG
const pathMatches = svgContent.match(/<path[^>]*>/g) || [];

// Build new paths with links - use inline styles to ensure they apply
let modifiedPaths = '';
const defaultFill = '#dbeafe';
const defaultStroke = '#0052cc';

pathMatches.forEach(pathTag => {
  const titleMatch = pathTag.match(/title="([^"]+)"/);
  const idMatch = pathTag.match(/id="([^"]+)"/);
  const dMatch = pathTag.match(/d="([^"]+)"/);
  
  if (titleMatch && dMatch) {
    const stateName = titleMatch[1];
    const stateId = idMatch ? idMatch[1] : '';
    const pathD = dMatch[1];
    const slug = stateSlugMap[stateName];
    
    // Use inline fill/stroke to guarantee styling works
    const pathAttrs = `d="${pathD}" fill="${defaultFill}" stroke="${defaultStroke}" stroke-width="0.5" class="state-path" data-name="${stateName}" id="${stateId}"`;
    
    if (slug) {
      modifiedPaths += `<a href="/${slug}/" class="state-link" data-state="${stateName}"><path ${pathAttrs}/></a>\n`;
    } else {
      modifiedPaths += `<path ${pathAttrs}/>\n`;
    }
  }
});
---

<div class="us-map-wrapper">
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    viewBox="477 421 593.4 318.3" 
    class="us-map-svg"
    role="img"
    aria-label="Interactive map of the United States"
  >
    <Fragment set:html={modifiedPaths} />
  </svg>
  <div class="map-tooltip" id="map-tooltip"></div>
</div>

<style>
  .us-map-wrapper {
    position: relative;
    width: 100%;
    max-width: 100%;
    padding: var(--space-4);
  }
  
  .us-map-svg {
    width: 100%;
    height: auto;
    display: block;
    filter: drop-shadow(0 4px 12px rgba(0, 82, 204, 0.08));
  }
  
  .state-path {
    transition: all 0.25s ease;
    cursor: pointer;
  }
  
  .state-path:hover {
    fill: #1e3a5f !important;
    stroke: #0f2744 !important;
    stroke-width: 1.2 !important;
    filter: drop-shadow(0 2px 8px rgba(0, 40, 100, 0.5));
  }
  
  .state-link:focus .state-path,
  .state-link:focus-visible .state-path {
    fill: #1e3a5f !important;
    stroke: #0f2744 !important;
    stroke-width: 1.2 !important;
    outline: none;
  }
  
  .map-tooltip {
    position: absolute;
    background: linear-gradient(135deg, var(--color-secondary, #0a1628) 0%, #1a2b4a 100%);
    color: white;
    padding: 10px 18px;
    border-radius: var(--radius-lg, 10px);
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.01em;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s ease, transform 0.2s ease;
    white-space: nowrap;
    z-index: 100;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.25);
    transform: translateX(-50%) translateY(5px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .map-tooltip::before {
    content: 'SEO Services in ';
    font-weight: 400;
    opacity: 0.8;
  }
  
  .map-tooltip::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 6px solid #1a2b4a;
  }
  
  .map-tooltip.visible {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .us-map-wrapper {
      padding: var(--space-2);
    }
    
    .map-tooltip {
      font-size: 12px;
      padding: 8px 14px;
    }
    
    .map-tooltip::before {
      content: '';
    }
  }
</style>

<script>
  const mapWrapper = document.querySelector('.us-map-wrapper');
  const svg = document.querySelector('.us-map-svg');
  const tooltip = document.getElementById('map-tooltip');
  
  if (svg && tooltip && mapWrapper) {
    const paths = svg.querySelectorAll('.state-path');
    
    paths.forEach(pathEl => {
      const stateName = pathEl.getAttribute('data-name');
      
      pathEl.addEventListener('mouseenter', () => {
        if (stateName) {
          tooltip.textContent = stateName;
          tooltip.classList.add('visible');
        }
      });
      
      pathEl.addEventListener('mousemove', (e) => {
        const rect = mapWrapper.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        tooltip.style.left = `${x}px`;
        tooltip.style.top = `${y - 55}px`;
      });
      
      pathEl.addEventListener('mouseleave', () => {
        tooltip.classList.remove('visible');
      });
    });
  }
</script>
